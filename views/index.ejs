<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Capstone Project ejs</title>
    <link rel="stylesheet" href="/style/style.css" />
  </head>
  <body>
    <h1>Hello world</h1>

    <form method="POST" action="/submit">
      <span class="label">
        <label for="userName">Name</label>
        <input type="text" name="userName" id="inputUsernName" />
      </span>
      <span class="label">
        <label for="age">Age</label>
        <input type="text" inputmode="numeric" name="age" id="ageInput" />
      </span>
      <input type="submit" value="submit" />
    </form>

    <table border="1" cellspacing="0" cellpadding="10" class="table-data">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Age</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.userName %></td>
          <td><%= user.age %></td>
          <td><button type="button">Del</button></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
